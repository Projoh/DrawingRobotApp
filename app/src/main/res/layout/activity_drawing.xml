<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_200">


        <LinearLayout
            android:id="@+id/fullscreen_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:keepScreenOn="true"
            android:weightSum="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.13"
                android:layout_gravity="center"
                android:background="@color/blue_grey_500" >

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/first_button"
                    android:background="@color/amber_300"/>


                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="20dp"
                    android:id="@+id/second_button"
                    android:layout_toRightOf="@id/first_button"
                    android:background="@color/amber_300"/>

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="20dp"
                    android:id="@+id/third_button"
                    android:background="@color/amber_300"
                    android:layout_toRightOf="@id/second_button"/>

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:paddingEnd="20dp"
                    android:background="@color/amber_300"
                    android:layout_toRightOf="@id/third_button"/>

            </RelativeLayout>
            <edu.usf.carrt.mohamed.drawingboard.DrawingView
                android:layout_width="match_parent"
                android:id="@+id/drawing_view"
                android:layout_height="0dp"
                android:layout_weight=".87"
                android:background="@color/amber_50"/>

            <Button
                android:id="@+id/send_image_button"
                style="?metaButtonBarButtonStyle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="@string/dummy_button" />

        </LinearLayout>


</FrameLayout>